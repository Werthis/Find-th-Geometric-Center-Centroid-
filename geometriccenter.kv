<Label>:
    font_size: 30
    color: 1, 1, 1, 1
    valign: 'middle'
    canvas.before:
        Color:
            rgb: 0.8, 0.3, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Button>:
    font_size: 30
    background_color: 1, 0.1, 1, 1
    color: 1, 1, 1, 0.8
            
<MyTextInput>:
    font_size: 30
    color: 0, 1, 1, 0
    background_color: (0.5, 0.3, 1, 1) if self.focus else (0.8, 0.3, 1, 1)
    on_text: root.update_padding(args[0])
    padding_x: self.width/2 

<Invoice>:

    dimentions_number: dimentions_number

    GridLayout:
        cols: 1

        GridLayout:
            cols: 1          

            GridLayout:
                cols: 1

                Label:
                    id: label_1
                    text: 'How many dimensions do you need?'
                
                MyTextInput:
                    multiline: False
                    id: dimentions_number

                Button:
                    id: button_1
                    text: root.button_text
                    on_press: root.add()
                    on_release: root.change_button_text('pressed')
                    on_release: if len(dimentions_number.text) != 0: button_1.disabled = True

        GridLayout:
            id: dimensions
            size: root.width, root.height
            cols: 1


        GridLayout:
            cols: 1 

            GridLayout:
                cols: 1               

                GridLayout:
                    cols: 1

                    Button:
                        id: button_2
                        text: 'Add point'
                        on_press: root.get_coordinates()

                    GridLayout:
                        id: points
                        size: root.width, root.height
                        cols: 10

                    Button:
                        id: button_3
                        text: 'Find geometric center'
                        on_press: root.request()

                    Label:
                        id: label_2
                        text: root.geometric_center
                        font_size: 40
