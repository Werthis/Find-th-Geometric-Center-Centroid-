<Label>:
    font_size: 20
    background_color: 0.3, 0.4, 0.5, 1
    color: 1, 1, 1, 1

<Button>:
    font_size: 30
    background_color: 1, 1, 1, 1
    color: 1, 1, 1, 1

<MyLabel>:
    font_size: 15
    size_hint_y:None
    height: 30
    text_size: self.size
    valign: 'middle'
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size
<TextInput>:
    font_size: 30
    color: 0, 1, 1, 0
    background_color: 1, 1, 1, 1

<Invoice>:

    dimentions_number: dimentions_number

    BoxLayout:
        orientation: "vertical"
        padding : 15, 15

        BoxLayout:
            orientation: "vertical"
            padding : 5, 5
            size_hint: .6, None
            pos_hint: {'x': .18,}


            BoxLayout:
                orientation: "horizontal"
                padding : 5, 5
                spacing: 10, 10
                size: 800, 40
                size_hint: 1, None

                Label:
                    id: label1
                    text: 'ENTER DIMENSION NUMBER:'
                
                TextInput:
                    multiline: False
                    id: dimentions_number

                Button:
                    id: button_1
                    text: "Button 1"
                    size_hint_x: .05
                    spacing_x: 30
                    on_press:root.add()    
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1

            BoxLayout:
                orientation: 'vertical'
                # size_hint: .5, 1
                # padding: 0, 15
                # spacing:

                Button:
                    id: button_2
                    text: 'Button 2'








